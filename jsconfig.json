{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@c/*": ["components/*"],
      "@v/*": ["views/*"],
      "@u/*": ["utils/*"],
      "@img/*": ["assets/images/*"]
    },
    "target": "es5",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}